[bandit]
# Bandit configuration for nonkyc bot security scanning
exclude_dirs = [
    '/tests/',
    '/.venv/',
    '/venv/',
    '/.tox/',
    '/build/',
    '/dist/',
]

# Tests to skip (with justification)
skips = [
    # B404: import_subprocess - We don't use subprocess
    # B603: subprocess_without_shell_equals_true - We don't use subprocess
]

# Severity levels: LOW, MEDIUM, HIGH
# Confidence levels: LOW, MEDIUM, HIGH

# Only report issues with at least MEDIUM confidence
confidence = MEDIUM

# Report all severity levels
severity = LOW
